<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Title TextView at the top -->
    <TextView
        android:id="@+id/Notifications_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingBottom="8dp"
        android:text="List of Entrants"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- TabLayout below the title -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_Layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#27272A"
        app:tabIndicatorColor="@color/white"
        app:tabSelectedTextColor="#EC7CEE"
        app:layout_constraintTop_toBottomOf="@id/Notifications_Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabGravity="fill"
        app:tabMode="fixed">

        <!-- Tabs for each category -->
        <com.google.android.material.tabs.TabItem
            android:text="Waitlist"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>
        <com.google.android.material.tabs.TabItem
            android:text="Invited" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
        <com.google.android.material.tabs.TabItem
            android:text="Cancelled" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
        <com.google.android.material.tabs.TabItem
            android:text="Enrolled" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
    </com.google.android.material.tabs.TabLayout>

    <!-- FrameLayout to hold the selected fragment content -->
    <FrameLayout
        android:id="@+id/FrameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tab_Layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
