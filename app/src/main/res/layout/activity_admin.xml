<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18181B">

    <!-- Back Button at the top-left -->

    <ImageButton
        android:id="@+id/oval_rectangle_input"
        android:layout_width="404dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="92dp"
        android:background="@drawable/rectangle_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_Layout_Admin"
        app:srcCompat="@drawable/rectangle_background" />

    <ImageView
        android:id="@+id/back_button2"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:contentDescription="Back"
        android:src="@drawable/arrow_left_solid"
        app:tint="#7B24EB"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <!-- TabLayout below the title -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_Layout_Admin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#27272A"
        app:tabIndicatorColor="@color/white"
        app:tabSelectedTextColor="#EC7CEE"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabGravity="fill"
        app:tabMode="fixed">

        <!-- Tabs for each category -->
        <com.google.android.material.tabs.TabItem
            android:text="Events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.google.android.material.tabs.TabItem
            android:text="Images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.google.android.material.tabs.TabItem
            android:text="Facilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.google.android.material.tabs.TabItem
            android:text="Profiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.google.android.material.tabs.TabLayout>

    <!-- FrameLayout to hold the selected fragment content -->

    <FrameLayout
    android:id="@+id/FrameLayoutAdmin"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@+id/oval_rectangle_input"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/search_Icon"
        android:layout_width="46dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/oval_rectangle_input"
        app:layout_constraintStart_toStartOf="@+id/oval_rectangle_input"
        app:layout_constraintTop_toTopOf="@+id/oval_rectangle_input"
        app:srcCompat="?android:attr/actionModeWebSearchDrawable" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="347dp"
        android:layout_height="35dp"
        android:hint="search by username or event name"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/oval_rectangle_input"
        app:layout_constraintEnd_toEndOf="@+id/oval_rectangle_input"
        app:layout_constraintStart_toEndOf="@+id/search_Icon"
        app:layout_constraintTop_toTopOf="@+id/oval_rectangle_input" />
</androidx.constraintlayout.widget.ConstraintLayout>
