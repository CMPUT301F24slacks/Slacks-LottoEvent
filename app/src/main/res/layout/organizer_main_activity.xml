<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_act">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#075E53"
        app:tabIndicatorColor="@color/white"
        app:tabSelectedTextColor="@color/white">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_entrantEvents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Look At My Events" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_manageMyEvents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage My Events" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_manageFacility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage My Facility" />

    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:id="@+id/FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>

