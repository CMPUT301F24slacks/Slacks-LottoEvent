<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".CreateEvent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding_bottom="10dp">

        <!--        Event Name-->

        <!--    Event Date-->

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="363dp"
            android:layout_height="162dp"
            android:layout_marginTop="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/event_label"
            android:layout_width="94dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="12dp"
            android:text="Event Name"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/event_name"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/event_name"
            android:layout_width="371dp"
            android:layout_height="41dp"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:inputType="text"
            android:maxLength="50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:ignore="MissingConstraints" />

        <!--Event Time-->
        <TextView
            android:id="@+id/date_label"
            android:layout_width="58dp"
            android:layout_height="23dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Date"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_name"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/event_date"
            android:layout_width="148dp"
            android:layout_height="39dp"
            android:layout_marginStart="12dp"
            android:ems="10"
            android:inputType="date"
            android:maxLength="50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_label"
            app:layout_constraintVertical_bias="0.025"
            tools:ignore="MissingConstraints" />


        <!--        Event Details-->

        <!--        QR Code-->

        <!--   Num People Accepted-->

        <!-- Num of Entrants-->

        <TextView
            android:id="@+id/time"
            android:layout_width="58dp"
            android:layout_height="23dp"
            android:layout_marginTop="12dp"
            android:text="Time"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.568"
            app:layout_constraintStart_toEndOf="@+id/date_label"
            app:layout_constraintTop_toBottomOf="@+id/event_name"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/event_time"
            android:layout_width="148dp"
            android:layout_height="39dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:inputType="textLongMessage"
            android:maxLength="50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.689"
            app:layout_constraintStart_toEndOf="@+id/event_date"
            app:layout_constraintTop_toBottomOf="@+id/time"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="128dp"
            android:layout_height="27dp"
            android:layout_marginTop="20dp"
            android:text="Event Details"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_time"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/desc2"
            android:layout_width="128dp"
            android:layout_height="27dp"
            android:text="Extra Details"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/event_details2"
            app:layout_constraintTop_toBottomOf="@+id/no_pp_accpt6"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="45dp" />

        <EditText
            android:id="@+id/event_details"
            android:layout_width="378dp"
            android:layout_height="73dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:inputType="textLongMessage"
            android:maxLength="250"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.363"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/desc"
            tools:ignore="MissingConstraints" />


        <EditText
            android:id="@+id/event_details2"
            android:layout_width="383dp"
            android:layout_height="39dp"
            android:ems="10"
            android:inputType="textLongMessage"
            android:maxLength="250"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="840dp" />

        <TextView
            android:id="@+id/Qr"
            android:layout_width="180dp"
            android:layout_height="31dp"
            android:layout_marginBottom="16dp"
            android:text="Generate QR Code"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/no_pp_accpt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.069"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/generate_qr_code"
            android:layout_width="149dp"
            android:layout_height="36dp"
            android:text="QR Code"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.661"
            app:layout_constraintStart_toEndOf="@+id/Qr"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="521dp" />

        <Button
            android:id="@+id/createBtn"
            android:layout_width="149dp"
            android:layout_height="36dp"
            android:layout_marginTop="48dp"
            android:text="Create"
            app:layout_constraintTop_toBottomOf="@+id/event_details2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="142dp" />

        <TextView
            android:id="@+id/no_pp_accpt"
            android:layout_width="179dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="20dp"
            android:text="No.People Accepted"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/no_people_accpt"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/no_pp_accpt3"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginTop="28dp"
            android:text="WL"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/no_people_accpt"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="52dp" />

        <TextView
            android:id="@+id/no_pp_accpt6"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:text="WLIc"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="748dp" />

        <TextView
            android:id="@+id/no_pp_accpt7"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginTop="28dp"
            android:text="CancIc"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/no_pp_accpt4"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="180dp" />

        <TextView
            android:id="@+id/no_pp_accpt8"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginTop="28dp"
            android:text="SelIc"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/no_pp_accpt4"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="309dp" />

        <TextView
            android:id="@+id/no_pp_accpt4"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginTop="28dp"
            android:text="Canc"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/no_people_accpt"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="180dp" />

        <TextView
            android:id="@+id/no_pp_accpt5"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginTop="28dp"
            android:text="Sel"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/no_people_accpt2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="309dp" />

        <TextView
            android:id="@+id/no_pp_accpt2"
            android:layout_width="179dp"
            android:layout_height="32dp"
            android:layout_marginStart="228dp"
            android:text="No.People Accepted"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="568dp" />

        <EditText
            android:id="@+id/no_people_accpt"
            android:layout_width="69dp"
            android:layout_height="38dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintEnd_toStartOf="@+id/no_people_accpt2"
            app:layout_constraintHorizontal_bias="0.192"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="622dp" />

        <EditText
            android:id="@+id/no_people_accpt2"
            android:layout_width="69dp"
            android:layout_height="38dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="88dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/no_pp_accpt2"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
