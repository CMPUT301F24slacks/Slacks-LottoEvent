<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".view.EntrantEventDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#333333"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:background="#E0E0E0">

            <ImageView
                android:id="@+id/eventImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D3D3D3"
                android:scaleType="centerCrop"
                android:src="@drawable/event_image" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:layout_marginBottom="16dp"
            android:background="#333333"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tech Innovators Summit 2024"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Date Icon"
                    android:src="@drawable/baseline_calendar_today_20"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/eventDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Event Date: 2024-06-15"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Date Icon"
                    android:src="@drawable/baseline_calendar_today_20"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/signupDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Sign up Deadline: 2024-06-15"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Time Icon"
                    android:src="@drawable/baseline_access_time_20"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/eventTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="14:00 - 15:00"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Location Icon"
                    android:src="@drawable/baseline_location_pin_20"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/eventLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Students' Union Building, University of Alberta"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <TextView
                android:id="@+id/eventDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Join us for the Tech Innovators Summit 2024, where industry leaders helpp aheebuiebdfbeujfbejbfrjehfbfbrhejfbjehfbrhjbfjhrfbrjfbbfhbfrbfrjfbrjhbfjrbfrjfbrjbfjrbfjfjbjrhbfrjbfrjbfrjbfrjbfrfbhrjbfhjrbfhjrbfjrbfjrbfjrbfbjrfbrjbfjrbfjrhfbrhjbrjhbfrhjbfjrbfrjfbrjhbfrjbfjrhbfjhrbfjrfbjrbfjrskibigSohanaDhinsa"
                android:textColor="#FFFFFF"
                android:scrollHorizontally="false"
                android:singleLine="false"
                android:lineSpacingExtra="2dp"
                android:maxLines="5"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Capacity Icon"
                    android:src="@drawable/baseline_account_circle_24"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/eventSlotsCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Event Slots: 1000"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/eventWaitlistCapacitySection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Capacity Icon"
                    android:src="@drawable/baseline_account_circle_24"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/eventWaitlistCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Waitlist Capacity: 1000"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/spotsAvailableSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="Clock Icon"
                    android:src="@drawable/baseline_access_time_24"
                    app:tint="#7B24EB" />

                <TextView
                    android:id="@+id/spotsAvailable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Only ** spots available"
                    android:textColor="#BDBDBD" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/show_qr_code_button"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:backgroundTint="#7B24EB"
                android:text="View QR Code" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/editEventButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#7B24EB"
                android:text="Edit Event Poster"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/lotterySystemButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:backgroundTint="#7B24EB"
                android:text="Lottery System"
                android:textColor="#FFFFFF"
                android:visibility="gone" />

            <Button
                android:id="@+id/entrantListButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:backgroundTint="#7B24EB"
                android:text="List of Entrants"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <TextView
            android:id="@+id/waitlistFullBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#7B24EB"
            android:padding="8dp"
            android:text="Waitlist Full, Check Back Later"
            android:textColor="#FFFFFF"
            android:visibility="gone" />
    </LinearLayout>


</ScrollView>
